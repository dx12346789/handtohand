/**
 * 登录密码加密
 */
$("#pass").blur(function () {
    var pass = $.md5($("#pass").val());
    console.log(pass);
    $("#pass").val(pass);
});


/**
 * 表单提交
 */
$("#contact-form").submit(function () {
    $("#Account").trigger('change',['1']);
    if (isAccountOk) {
        if (isNickOk) {
            if (isPassOk) {
                console.log("提交" + isCodeOk);
                if (isCodeOk) {
                    $("#Pwd").val($.md5($("#Pwd").val()));
                    return true;
                } else {
                    $("#error").html("请输入正确的验证码");
                }
            } else {
                $("#error").html("密码由6-8位的数字和字母组成");
            }
        } else {
            $("#error").html("请输入昵称");
        }
    } else {
        $("#error").html("请输入正确的手机号或邮箱");
    }
    return false;
});