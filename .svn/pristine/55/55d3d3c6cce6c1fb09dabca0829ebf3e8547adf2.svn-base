//是否可以获取验证码
var isGetCode = true;
//验证码是否正确
var isCodeOk = false;
//账号是否可用
var isAccountOk = false;
//密码是否可用
var isPassOk = false;

//昵称是否可用
var isNickOk = $("#nick").length > 0 ? false : true;

/**
 * 内容改变时，验证码判定失效
 */
$("#Account").on("change",function (event,type) {

    if (type != '1' && isCodeOk) {
        getCountCode();
        isCodeOk = false;
    }
    var account = $("#Account").val().trim();
    console.log(account);
    $("#Account").val(account);
    console.log(isAccount(account));
    if (isAccount(account)) {
        $("#error").html("");
        isAccountOk = true;
    } else {
        $("#error").html("请输入正确的手机号或邮箱");
        isAccountOk = false;
    }
});


/**
 * 判断密码是否符合要求
 */
$("#Pwd").change(function () {
    var content = $("#Pwd").val();
    if (isPass(content)) {
        if ($("#Pwd2").length > 0) {
            if (isSamePass($("#Pwd").val(), $("#Pwd2").val())) {
                isPassOk = true;
            } else {
                $("#error").html("两次密码不一致");
                isPassOk = false;
            }
        } else {
            $("#error").html("");
            isPassOk = true;
        }
    } else {
        $("#error").html("密码由6-8位的字母或数字组成");
        isPassOk = false;
    }
});

$("#Pwd2").change(function () {
    var content = $("#Pwd2").val();
    if (isPass(content)) {
        if (isSamePass($("#Pwd").val(), $("#Pwd2").val())) {
            $("#error").html("");
            isPassOk = true;
        } else {
            $("#error").html("两次密码不一致");
            isPassOk = false;
        }
    } else {
        $("#error").html("密码由6-8位的字母或数字组成");
        isPassOk = false;
    }
});


