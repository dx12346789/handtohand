<script type="text/javascript">
    var i=0;
    var num=0;
    //			$(".updatepanel").height($(".panel-info").height());
    document.getElementById('file').onchange = function() {
        add();
        var imgFile = this.files[0];
        console.log(imgFile);
        i++;
        if(i==3){
            $("#img-div-input").hide();
        }

        var fr = new FileReader();
        fr.onload = function() {
            var imgs = document.getElementsByClassName('updateimg');
            imgs[imgs.length-1].src = fr.result;

        };
        fr.readAsDataURL(imgFile);
    };
    function add(){
        num++;
        var html = "<div class='col-sm-3'  id='picture" + num + "' style='width:200px;height:100px;border:1px solid red;'><div class='panel panel-info'><div class='panel-heading'><i class='fa fa-times' onclick='del("+num+")'></i></div><div class='panel-body' style='text-align: center;'><img class='updateimg img-responsive' src='img/p_big3.jpg' style='width:200px;height:100px;'/></div></div></div>";
        $("#img-div-input").before(html);
    }

    var del = function (x) {
        console.log("删除");
        $("#picture"+x).remove();
        i--;
        if(i<3){
            $("#img-div-input").show();
        }
    };
</script>
